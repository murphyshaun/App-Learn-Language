<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:converter="clr-namespace:LearnNewWord.Managers.Converter">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Button.xaml" />
        <ResourceDictionary Source="ToggleButton.xaml" />
        <ResourceDictionary Source="TextBlock.xaml" />
        <ResourceDictionary Source="TextBox.xaml" /> 
        <ResourceDictionary Source="CheckBox.xaml" />
        <ResourceDictionary Source="ComboBox.xaml" />
        <ResourceDictionary Source="RadioButton.xaml" />
        <ResourceDictionary Source="DatePicker.xaml" />
        <ResourceDictionary Source="Scrollbar.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converter:AlternationIndexConverter x:Key="AlternationIndexConverter" />
    <converter:IndexListItemConverter x:Key="IndexListItemConverter" /> 
    <converter:FormatCurrencyConverter x:Key="FormatCurrencyConverter" />
    <converter:FormatCurrencyConverterCustom x:Key="FormatCurrencyConverterCustom" /> 
    <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converter:BooleanToVisibilityReverseConverter x:Key="BooleanToVisibilityReverseConverter" />
    <converter:BooleanReverseConverter x:Key="BooleanReverseConverter" />
    <converter:StringToBooleanConverter x:Key="StringToBooleanConverter" />
</ResourceDictionary>